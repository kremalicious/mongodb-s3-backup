{
  "name": "mongodb-s3-backup",
  "version": "1.0.0",
  "description": "A tool to backup MongoDB databases to AWS S3",
  "author": "Matthias Kretschmann <m@kretschmann.io>",
  "license": "MIT",
  "scripts": {
    "start": "bun src/index.ts",
    "lint": "biome check .",
    "format": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --coverage"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.931.0",
    "@aws-sdk/lib-storage": "3.931.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "@kremalicious/config": "2.2.0",
    "@types/bun": "1.3.2",
    "@types/node": "24.10.1",
    "@vitest/coverage-v8": "4.0.8",
    "typescript": "5.9.3",
    "vitest": "4.0.8"
  }
}
